@model BTL_CNPM.Models.Toa

@{
    ViewBag.Title = "Thêm tòa";
    ViewBag.Controller = "Tòa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Thêm tòa nhà mới</h3>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên tòa</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenToa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenToa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index", new { controller = "Toa" }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
